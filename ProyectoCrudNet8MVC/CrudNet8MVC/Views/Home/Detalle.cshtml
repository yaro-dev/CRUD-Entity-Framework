@model CrudNet8MVC.Models.Contacto

@{
	ViewData["title"] = "Detalle de contacto";
}

<h1 class="text-center">contacto con .net 8</h1>

<div class="row">
	<div class="offset-12">
		<div class="card border">
			<div class="card-header bg-dark">
				<h3 class="text-white"><strong>crear usuario</strong></h3>
			</div>
			<div class="card-body">

				<ul class="list-group">

					<li class="list-group-item">
						<strong>Nombre: </strong> @Html.DisplayFor(m => m.Nombre)
					</li>

					<li class="list-group-item">
						<strong>Teléfono: </strong> @Html.DisplayFor(m => m.Telefono)
					</li>

					<li class="list-group-item">
						<strong>Celular: </strong> @Html.DisplayFor(m => m.Celular)
					</li>

					<li class="list-group-item">
						<strong>Email: </strong> @Html.DisplayFor(m => m.Email)
					</li>

					<li class="list-group-item">
						<strong>Fecha de creación: </strong> @Html.DisplayFor(m => m.FechaCreacion)
					</li>

				</ul>

				<a asp-controller="Home" asp-action="Index">Volver</a>
			</div>
		</div>
	</div>
</div>